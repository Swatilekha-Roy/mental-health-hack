<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <!-- FA CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="shortcut icon" href="img/favicon.png" type="image/png">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/modal_form.css">
    <link rel="stylesheet" href="css/toast.css">

    <!-- Title of Page -->
    <title>Zen Bubble</title>
  </head>

  
  <body>
    <%- include('modal_form') %>
    <%- include('toast') %>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-light fixed-top" style="background-color: #C2F1B5 !important;">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="img/logo-nobg.png" width="170" background= "white" text-indent= "-99999px" style="margin-left: 3%;">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <% if(currentUser){ %>
                <a class="nav-link" aria-current="page" href="/community">Community Help</a>
              <% } %>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/journal">Journal</a>
            </li>
            <li class="nav-item">
              <% if(currentUser){ %>
                <a class="nav-link" aria-current="page" href="/meditate">Meditate</a>
              <% } %>
            </li>
            <li class="nav-item nav-item-active">
              <a class="nav-link" aria-current="page" href="/leaderboard">Leaderboard</a>
            </li>

            <% if(!currentUser){ %>
              <li class="nav-item">
              <a id="modal_btn" class="nav-link btn-get-quote text-white" href="#login">Login</a>
              </li>
            <% } else { %>
              <li class="nav-item">
              <a class="nav-link " href="/logout">Logout</a>
              </li>
            <% } %>      
              
                <li class="nav-item" style="background-color: #C2F1B5 !important; margin-top: 0 !important; margin-bottom: 0 !important; padding-top: 0 !important; padding-bottom: 0 !important;">
                  <% if(currentUser){ %>
                    <a class="nav-link" aria-current="page" href="/profile" style="margin-top: 0 !important; margin-bottom: 0 !important; padding-top: 0 !important; padding-bottom: 0 !important;"><i class="fas fa-user-circle" style="font-size: 36px; margin-top: 0 !important; margin-bottom: 0 !important; padding-top: 0 !important; padding-bottom: 0 !important; color: #5DB274;"></i></a>
                  <% } %>
                </li>
          </ul>
        </div>
      </div>
    </nav>

    <h2 style="text-align: center; margin-top: 140px;">Zen Bubble Leaderboard</h2>
    
    <!-- Leaderboard table -->
    <div class="container my-3">
      <table class="table" style="margin-top: 40px; text-align: center;">
        <thead>
          <tr>
            <th scope="col" class="head-t">#</th>
            <th scope="col" class="head-t">Name</th>
            <th scope="col" class="head-t">Score</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user,index){ %>
            <tr>
            <th scope="row"><%=index+1%></th>
            <td><%=user.name%></td>
            <td><%=user.score%></td>
          </tr>
       
         <% }) %>
    
        </tbody>
      </table>
    </div>

    <!-- All badges -->
    <div class="container">
      <div class="row">
        <h3 style="margin-top: 7%; margin-bottom: 3%;">Badge Showroom</h3>
        <div class="col-xs-5 col-md-3">
          <img src="img/badges/welcome.png" width="130px" alt="" data-toggle="tooltip" data-placement="left" title="For signing up on Zen Bubble" />
        </div>
        <div class="col-xs-5 col-md-3">
          <img src="img/badges/k-level-one.png" width="130px" alt="" data-toggle="tooltip" data-placement="left" title="For helping at least 1 other person through conversation." />
        </div>
        <div class="col-xs-5 col-md-3">
          <img src="img/badges/k-level-two.png" width="130px" alt="" data-toggle="tooltip" data-placement="left" title="For helping at least 4 other persons through conversation." />
        </div>
        <div class="col-xs-5 col-md-3">
          <img src="img/badges/k-level-three.png" width="130px" alt="" data-toggle="tooltip" data-placement="left" title="For helping at least 7 other persons through conversation." />
        </div>
        <div class="col-xs-5 col-md-3" style="margin-top: 4%;">
          <img src="img/badges/applauder.png" width="130px" alt="" data-toggle="tooltip" data-placement="left" title="For rating at least 3 conversations so far." />
        </div>
        <div class="col-xs-5 col-md-3" style="margin-top: 4%;">
          <img src="img/badges/goal.png" width="130px" alt="" data-toggle="tooltip" data-placement="left" title="For completing to-do list of any one day." />
        </div>
        <div class="col-xs-5 col-md-3" style="margin-top: 4%;">
          <img src="img/badges/social.png" width="130px" alt="" data-toggle="tooltip" data-placement="left" title="Having a complete profile and minimum 5 shares." />
        </div>
        <div class="col-xs-5 col-md-3" style="margin-top: 4%;">
          <img src="img/badges/meditate.png" width="130px" alt="" data-toggle="tooltip" data-placement="left" title="Completing at least 1 hour of meditation session." />
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-3 footer-left">
            <p>
              <img src="img/favicon.png" style="width: 55px;">  <span style="color: #1e7c37;">Made with <i class="fas fa-heart"></i> by Zen Bubble</span>
            </p>        
          </div>
          <div class="col-md-3 offset-md-1 footer-right">
            <a href="https://github.com/Swatilekha-Roy/Zen-Bubble"><i class="fab fa-github"></i></a>
						<a href="mailto:swatilekha.roy4@gmail.com"><i class="fa fa-envelope"></i></a>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scroll to top arrow -->
    <a href="javascript:" id="return-to-top"><i class="fa fa-angle-up" aria-hidden="true" style="font-size: 30px;"></i></a>

    <!-- JQuery JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js" integrity="sha512-n/4gHW3atM3QqRcbCn6ewmpxcLAHGaDjpEBu4xZd47N0W2oQ+6q7oc3PXstrJYXcbNU1OHdQ1T7pAP+gi5Yu8g==" crossorigin="anonymous"></script>

    <!-- Custom scripts -->
    <script type="text/javascript" src="js/modal.js"></script>
    <script type="text/javascript" src="js/scripts.js"></script>
    <script type="text/javascript" src="js/wow.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>

    <!-- Userway -->
    <script>(function(d){var s = d.createElement("script");s.setAttribute("data-account", "E9TGLGySQm");s.setAttribute("src", "https://cdn.userway.org/widget.js");(d.body || d.head).appendChild(s);})(document)</script><noscript>Please ensure Javascript is enabled for purposes of <a href="https://userway.org">website accessibility</a></noscript>

    
    <!-- WOW script -->
    <script type="text/javascript">
      new WOW().init();
    </script>

  </body>
</html>