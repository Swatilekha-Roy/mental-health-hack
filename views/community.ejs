<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />

    <!-- FA CSS -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css"
      rel="stylesheet"
    />

    <!-- JQuery CSS -->
    <link
      href="http://www.jqueryscript.net/css/jquerysctipttop.css"
      rel="stylesheet"
      type="text/css"
    />

    <!-- Favicon -->
    <link rel="shortcut icon" href="img/favicon.png" type="image/png" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/animate.css" />
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="stylesheet" href="css/c-styles.css" />
    <link rel="stylesheet" href="css/style1.css" />
    <link rel="stylesheet" href="css/modal_form.css" />
    <link rel="stylesheet" href="css/toast.css" />

    <!-- Title of Page -->
    <title>Zen Bubble</title>
  </head>

  <body>
    <%- include('modal_form') %> <%- include('toast') %>

    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-md navbar-light"
      style="background-color: #c2f1b500 !important"
    >
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            src="img/logo.png"
            width="170"
            background="white"
            text-indent="-99999px"
            style="margin-left: 3%"
          />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item nav-item-active">
              <a class="nav-link nav-link-active" href="/">Home</a>
            </li>

            <div class="dropdown">
              <a
                class="btn nav-link-drop dropdown-toggle"
                href="#"
                role="button"
                id="dropdownMenuLink"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Seek Help
              </a>

              <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li>
                  <a class="dropdown-item" href="/community">Community Help</a>
                </li>
                <div class="dropdown-divider"></div>
                <li><a class="dropdown-item" href="#">Professional Help</a></li>
                <div class="dropdown-divider"></div>
                <li>
                  <a class="dropdown-item" href="#">Resources</a>
                </li>
              </ul>
            </div>

            <div class="dropdown">
              <a
                class="btn nav-link-drop dropdown-toggle"
                href="#"
                role="button"
                id="dropdownMenuLink"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Self Care
              </a>

              <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <li>
                  <a class="dropdown-item" href="/journal">Journal</a>
                </li>
                <div class="dropdown-divider"></div>
                <li><a class="dropdown-item" href="/meditate">Meditate</a></li>
              </ul>
            </div>

            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/leaderboard"
                >Leaderboard</a
              >
            </li>

            <% if(!currentUser){ %>
            <li class="nav-item">
              <a
                id="modal_btn"
                class="nav-link btn-get-quote text-white"
                href="#login"
                >Login</a
              >
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <% } %>

            <li
              class="nav-item"
              style="
                margin-top: 0 !important;
                margin-bottom: 0 !important;
                padding-top: 0 !important;
                padding-bottom: 0 !important;
              "
            >
              <% if(currentUser){ %>
              <a
                class="nav-link"
                aria-current="page"
                href="/profile"
                style="
                  margin-top: 0 !important;
                  margin-bottom: 0 !important;
                  padding-top: 0 !important;
                  padding-bottom: 0 !important;
                "
                ><i
                  class="fas fa-user-circle"
                  style="
                    font-size: 36px;
                    margin-top: 0 !important;
                    margin-bottom: 0 !important;
                    padding-top: 0 !important;
                    padding-bottom: 0 !important;
                    color: #ed5d61;
                  "
                ></i
              ></a>
              <% } %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Text input -->
    <form class="txt-input" action="/community" method="POST">
      <h2>Zen Bubble Heart to Heart Talks!</h2>
      <div class="form-group">
        <div class="col-sm-10 col-md-9 col-lg-7">
          <label for="exampleFormControlTextarea1"
            >Tell Us How You are Feeling Today...</label
          >
          <textarea
            type="text"
            class="form-control"
            name="emotiontxt"
            rows="5"
            style="resize: none"
            placeholder="Please write as long or as short as you want, we will try to find a way to help."
            required
          ></textarea>
          <button class="btn btn-primary emt-btn" type="submit" name="button">
            Submit
          </button>
        </div>
      </div>
    </form>

    <div class="container">
      <div class="row">
        <div class="col-12">
          <p class="dum"><%= result %></p>
        </div>
        <div class="col-10 col-md-5 col-lg-4">
          <button
            class="btn btn-primary convo-btn"
            onclick="openchat()"
            type="submit"
            name="convo-btn"
            style="display: none; margin-top: 10%"
          >
            Explore!
          </button>
          <!-- <input id="room_id" type="text"> <button class="roomBtn" onclick="joinRoom()">Join Room</button> -->

          <button
            class="btn btn-primary feel-btn"
            onclick="feelbox()"
            type="submit"
            name="feel-btn"
            style="display: none; margin-top: 10%"
          >
            Feeling Different Now.
          </button>
          <!--<button class="btn btn-primary trigger-push" style="display: none;">Trigger Push Notification</button>-->
        </div>
      </div>
    </div>

    <div class="container" style="display: none">
      <% query.forEach(function(user){ %>
      <p><%=user.name%></p>
      <p><%=user.score%></p>

      <% }) %>
    </div>

    <!-- Explanation -->
    <div class="container exp-con" style="margin-top: 6%">
      <div class="row">
        <h4>How to be a part of our Community Help Chat?</h4>
        <div class="col-12 col-md-10">
          <ul>
            <li>
              Enter how you are feeling in the text-box above, no word limit.
            </li>
            <li>Click Submit.</li>
            <li>
              If you are willing to help someone or take help according to our
              suggestion, click the 'Help Someone!' or 'Seek Help!' button.
            </li>
            <li>Allow us permission to send you notifications.</li>
            <li>
              Receive a room code to enter as soon as you are matched with
              someone.
            </li>
            <li>Enter unique room code in the input box, and boom!</li>
            <li>Talk your heart out!</li>
            <li>
              We also request you to feedback the conversation. Your two minutes
              would make someone else's day!
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Community Room -->
    <div
      class="join-container"
      style="margin-top: 150px; margin-bottom: 120px; display: none"
    >
      <header class="join-header">
        <h1 style="color: #ed5d61">Community Room</h1>
      </header>
      <main class="join-main">
        <form
          id="form"
          action="/room"
          name="myForm"
          onsubmit="return validateForm()"
        >
          <!--<div class="form-control">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" placeholder="Enter username..." style="border-color: transparent; border-radius: 5px;" required />
          </div>-->
          <div class="form-control">
            <label for="room">Enter Room Id</label>
            <input type="text" id="room" name="room" />
          </div>
          <button type="submit" class="btn">Join Room</button>
        </form>
      </main>
    </div>

    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-3 footer-left">
            <p>
              <img src="img/favicon.png" style="width: 55px" />
              <span style="color: #fff"
                >Made with <i class="fas fa-heart"></i> by Mindscape</span
              >
            </p>
          </div>
          <div class="col-md-3 offset-md-1 footer-right">
            <a href="https://github.com/Swatilekha-Roy/Zen-Bubble"
              ><i class="fab fa-github"></i
            ></a>
            <a href="mailto:swatilekha.roy4@gmail.com"
              ><i class="fa fa-envelope"></i
            ></a>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scroll to top arrow -->
    <a href="javascript:" id="return-to-top"
      ><i class="fa fa-angle-up" aria-hidden="true" style="font-size: 30px"></i
    ></a>

    <!-- JQuery JS -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"
      integrity="sha512-n/4gHW3atM3QqRcbCn6ewmpxcLAHGaDjpEBu4xZd47N0W2oQ+6q7oc3PXstrJYXcbNU1OHdQ1T7pAP+gi5Yu8g=="
      crossorigin="anonymous"
    ></script>

    <!-- Socket.io scripts -->
    <script src="/socket.io/socket.io.js"></script>

    <!-- Custom scripts -->

    <script type="text/javascript" src="js/scripts.js"></script>
    <script type="text/javascript" src="js/community.js"></script>
    <script type="text/javascript" src="js/wow.min.js"></script>
    <script type="text/javascript" src="js/push.js"></script>
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"
      integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"
      integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc"
      crossorigin="anonymous"
    ></script>

    <!-- Userway -->
    <script>
      (function (d) {
        var s = d.createElement("script");
        s.setAttribute("data-account", "E9TGLGySQm");
        s.setAttribute("src", "https://cdn.userway.org/widget.js");
        (d.body || d.head).appendChild(s);
      })(document);
    </script>
    <noscript
      >Please ensure Javascript is enabled for purposes of
      <a href="https://userway.org">website accessibility</a></noscript
    >

    <!-- WOW script -->
    <script type="text/javascript">
      new WOW().init();
    </script>
  </body>
</html>
