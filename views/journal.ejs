  <body>
    <%- include('modal_form') %>
    <%- include('toast') %>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-light fixed-top" style="background-color: #C2F1B5 !important;">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="img/logo-nobg.png" width="170" background= "white" text-indent= "-99999px" style="margin-left: 3%;">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <% if(currentUser){ %>
                <a class="nav-link" aria-current="page" href="/community">Community Help</a>
              <% } %>
            </li>
            <li class="nav-item nav-item-active">
              <a class="nav-link" aria-current="page" href="/journal">Journal</a>
            </li>
            <li class="nav-item">
              <% if(currentUser){ %>
                <a class="nav-link" aria-current="page" href="/meditate">Meditate</a>
              <% } %>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/leaderboard">Leaderboard</a>
            </li>

            <% if(!currentUser){ %>
              <li class="nav-item">
              <a id="modal_btn" class="nav-link btn-get-quote text-white" href="#login">Login</a>
              </li>
      <% } else { %>
        <li class="nav-item">
        <a class="nav-link " href="/logout">Logout</a>
        </li>
      <% } %>      
         
          <li class="nav-item" style="background-color: #C2F1B5 !important; margin-top: 0 !important; margin-bottom: 0 !important; padding-top: 0 !important; padding-bottom: 0 !important;">
            <% if(currentUser){ %>
              <a class="nav-link" aria-current="page" href="/profile" style="margin-top: 0 !important; margin-bottom: 0 !important; padding-top: 0 !important; padding-bottom: 0 !important;"><i class="fas fa-user-circle" style="font-size: 36px; margin-top: 0 !important; margin-bottom: 0 !important; padding-top: 0 !important; padding-bottom: 0 !important; color: #5DB274;"></i></a>
             <% } %>
          </li>
          </ul>
        </div>
      </div>
    </nav>


<!-- <br><br><br><br><br><br><br> -->
    <div class="row search-j" style="margin-left: 5%; margin-top: 25vh; color:#c8f57c">
        <div class="col-lg-8">
            <form class="form-inline my-2 my-lg-0" style="margin-top: 10%;">
                <div class="form-group">                                    
                <input class="form-control input-inline" id="searchTxt" type="text" style="width: 300px;" placeholder="Search your entries..." id="paperInputs1" type="search"> 
             </div>         
            </form>
        </div>
        <div class="col-lg-4" style="margin-top: 2%; margin-left: 1%;">
            <button class="btn btn-small my-2 my-sm-0" type="submit">Search</button>
        </div>
    </div>


    <!-- Diary Section -->
    <div class="container my-3">
        <h2 style="text-align: center; margin-top: 60px;">Your Journal</h2>

        <div class="card wow fadeInUp" style="width: 100%; background-color:#c5ddc5; border-color: transparent;">
            <div class="card-body">
               <h4 class="card-title" style="color: #2E8B57">Add Today's Entry</h4>
               <br>
                <div class="form-group">
                    <input class="form-control form-control-lg input-inline border-dotted required" id="addTitle" type="text" style="width: 210px;" placeholder="Day Number" id="paperInputs1">
                    
                   <br>
                    <textarea class="form-control form-control-lg required" id="addTxt" class="paper" placeholder="Write Your Heart Out..." style="width: 90%; height:200px"></textarea>
                </div>
              
              <button class="btn btn-primary" id="start-btn" style="float: right; margin-bottom: 10px; margin-right: 15px; margin-top: 10px; float: left;">Start listening</button>
              
              <br><br><br>
              <p id="instructions"> Press above button to convert your speech to text. </p>
              
              <button class="btn btn-primary" id="addBtn" style="align-items: center; float: right;">Post this</button>
            </div>
        </div>
      
        <br><hr>

        <h3 style="margin-top: 13%;">Days you aced</h3>
        <div id="notes" class="row container-fluid wow fadeInLeft">
            
        </div>
    </div>


    <!-- Footer -->
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-3 footer-left">
            <p>
              <img src="img/favicon.png" style="width: 55px;">  <span style="color: #1e7c37;">Made with <i class="fas fa-heart"></i> by Zen Bubble</span>
            </p>        
          </div>
          <div class="col-md-3 offset-md-1 footer-right">
            <a href="https://github.com/Swatilekha-Roy/Zen-Bubble"><i class="fab fa-github"></i></a>
						<a href="mailto:swatilekha.roy4@gmail.com"><i class="fa fa-envelope"></i></a>
          </div>
        </div>
      </div>
    </footer>

    <!-- Scroll to top arrow -->
    <a href="javascript:" id="return-to-top"><i class="fa fa-angle-up" aria-hidden="true" style="font-size: 30px;"></i></a>

